<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/black"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- اختيار النمط -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_pattern"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
        <Spinner
            android:id="@+id/spinnerPattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/patterns_array"
            android:spinnerMode="dropdown"/>

        <!-- اختيار اللون -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_color"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
        <Spinner
            android:id="@+id/spinnerColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/colors_array"
            android:spinnerMode="dropdown"/>

        <!-- اختيار الاتجاه -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_direction"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
        <Spinner
            android:id="@+id/spinnerDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/direction_array"
            android:spinnerMode="dropdown"/>

        <!-- اختيار التأثير -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_effect"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
        <Spinner
            android:id="@+id/spinnerEffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/effects_array"
            android:spinnerMode="dropdown"/>

        <!-- السرعة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_speed"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <SeekBar
            android:id="@+id/seekBarSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5"/>

        <!-- الحجم -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_size"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <SeekBar
            android:id="@+id/seekBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"/>

        <!-- الكثافة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_density"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <SeekBar
            android:id="@+id/seekBarDensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5"/>

        <!-- زر تطبيق الخلفية -->
        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:layout_marginTop="24dp"
            android:padding="12dp"/>
    </LinearLayout>
</ScrollView>
