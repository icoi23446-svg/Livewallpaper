<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- اختيار النمط -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اختر النمط"
            android:textStyle="bold"
            android:padding="4dp"/>
        <Spinner
            android:id="@+id/patternSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- اختيار اللون -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اختر اللون"
            android:textStyle="bold"
            android:padding="4dp"/>
        <Spinner
            android:id="@+id/colorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- اختيار الاتجاه -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاتجاه"
            android:textStyle="bold"
            android:padding="4dp"/>
        <Spinner
            android:id="@+id/directionSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- اختيار التأثير -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التأثير"
            android:textStyle="bold"
            android:padding="4dp"/>
        <Spinner
            android:id="@+id/effectSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- شريط السرعة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السرعة"
            android:textStyle="bold"
            android:paddingTop="12dp"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/speedSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="5"
            android:valueFrom="0"
            android:valueTo="10"
            app:stepSize="1"/>

        <!-- شريط الحجم -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الحجم"
            android:textStyle="bold"
            android:paddingTop="12dp"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/sizeSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="50"
            android:valueFrom="0"
            android:valueTo="100"
            app:stepSize="1"/>

        <!-- شريط الكثافة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الكثافة"
            android:textStyle="bold"
            android:paddingTop="12dp"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/densitySlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="5"
            android:valueFrom="0"
            android:valueTo="10"
            app:stepSize="1"/>

        <!-- زر التطبيق -->
        <Button
            android:id="@+id/applyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تطبيق الخلفية"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
