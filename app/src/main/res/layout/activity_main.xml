<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="12dp">

        <!-- اختيار النمط -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="النمط"
            android:textSize="16sp"
            android:padding="4dp"/>
        <Spinner
            android:id="@+id/patternSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- اختيار اللون -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اللون"
            android:textSize="16sp"
            android:padding="4dp"/>
        <Spinner
            android:id="@+id/colorSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- السرعة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السرعة"
            android:textSize="16sp"
            android:padding="4dp"/>
        <SeekBar
            android:id="@+id/speedSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <!-- الحجم -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الحجم"
            android:textSize="16sp"
            android:padding="4dp"/>
        <SeekBar
            android:id="@+id/sizeSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"/>

        <!-- الكثافة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الكثافة"
            android:textSize="16sp"
            android:padding="4dp"/>
        <SeekBar
            android:id="@+id/densitySeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <!-- الاتجاه -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاتجاه"
            android:textSize="16sp"
            android:padding="4dp"/>
        <Spinner
            android:id="@+id/directionSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- التأثير -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التأثير"
            android:textSize="16sp"
            android:padding="4dp"/>
        <Spinner
            android:id="@+id/effectSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- زر تعيين الخلفية -->
        <Button
            android:id="@+id/setWallpaperBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تعيين كخلفية حية"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
