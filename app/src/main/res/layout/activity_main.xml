<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <!-- اختيار النمط -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="النمط"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerPattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- اختيار اللون -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اللون"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- اختيار الاتجاه -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاتجاه"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- اختيار التأثير -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التأثير"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerEffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- شريط السرعة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السرعة"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <SeekBar
            android:id="@+id/seekSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <!-- شريط الحجم -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الحجم"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <SeekBar
            android:id="@+id/seekSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"/>

        <!-- شريط الكثافة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الكثافة"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <SeekBar
            android:id="@+id/seekDensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <!-- زر تطبيق -->
        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تطبيق"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
