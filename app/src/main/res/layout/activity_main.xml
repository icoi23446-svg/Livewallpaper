<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:spacing="12dp">

        <!-- اختيار النمط -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="النمط"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerPattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- اختيار اللون -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اللون"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- اختيار الاتجاه -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاتجاه"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- اختيار التأثير -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التأثير"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerEffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- التحكم في السرعة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السرعة"/>
        <SeekBar
            android:id="@+id/seekSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <!-- التحكم في الحجم -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الحجم"/>
        <SeekBar
            android:id="@+id/seekSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"/>

        <!-- التحكم في الكثافة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الكثافة"/>
        <SeekBar
            android:id="@+id/seekDensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <!-- زر تطبيق الخلفية -->
        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تطبيق الخلفية"
            android:padding="12dp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
