<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="12dp">

        <!-- اختيار النمط -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_pattern"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinnerPattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/patterns_array" />

        <!-- اختيار اللون -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_color"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinnerColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/colors_array" />

        <!-- اختيار الاتجاه -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_direction"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinnerDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/direction_array" />

        <!-- اختيار التأثير -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_effect"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinnerEffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/effects_array" />

        <!-- السرعة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_speed"
            android:textStyle="bold" />
        <SeekBar
            android:id="@+id/seekBarSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5" />

        <!-- الحجم -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_size"
            android:textStyle="bold" />
        <SeekBar
            android:id="@+id/seekBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

        <!-- الكثافة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_density"
            android:textStyle="bold" />
        <SeekBar
            android:id="@+id/seekBarDensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5" />

        <!-- زر تطبيق -->
        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
