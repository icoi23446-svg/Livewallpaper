<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- اختيار النمط -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="النمط"
            android:textStyle="bold"
            android:padding="8dp"/>

        <Spinner
            android:id="@+id/spinnerPattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- اختيار اللون -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اللون"
            android:textStyle="bold"
            android:padding="8dp"/>

        <Spinner
            android:id="@+id/spinnerColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- السرعة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السرعة"
            android:textStyle="bold"
            android:padding="8dp"/>

        <SeekBar
            android:id="@+id/seekSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <!-- الحجم -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الحجم"
            android:textStyle="bold"
            android:padding="8dp"/>

        <SeekBar
            android:id="@+id/seekSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"/>

        <!-- الكثافة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الكثافة"
            android:textStyle="bold"
            android:padding="8dp"/>

        <SeekBar
            android:id="@+id/seekDensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <!-- الاتجاه -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاتجاه"
            android:textStyle="bold"
            android:padding="8dp"/>

        <Spinner
            android:id="@+id/spinnerDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- التأثير -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التأثير"
            android:textStyle="bold"
            android:padding="8dp"/>

        <Spinner
            android:id="@+id/spinnerEffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
