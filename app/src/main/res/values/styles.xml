<resources>

    <!-- الثيم الأساسي للتطبيق -->
    <style name="Theme.UltimateLiveWallpaper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ألوان أساسية -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- الخلفية -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>

        <!-- عناصر التحكم -->
        <item name="android:buttonStyle">@style/Widget.CustomButton</item>
        <item name="android:spinnerStyle">@style/Widget.CustomSpinner</item>
        <item name="android:seekBarStyle">@style/Widget.CustomSeekBar</item>
    </style>

    <!-- زر جميل -->
    <style name="Widget.CustomButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:cornerRadius">16dp</item>
    </style>

    <!-- Spinner (قائمة منسدلة) -->
    <style name="Widget.CustomSpinner" parent="Widget.Material3.Spinner">
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- شريط تمرير -->
    <style name="Widget.CustomSeekBar" parent="Widget.Material3.SeekBar">
        <item name="android:thumbTint">@color/teal_700</item>
        <item name="android:progressTint">@color/teal_200</item>
    </style>

</resources>
